@using Microsoft.AspNetCore.Mvc.Rendering
@model IEnumerable<SchoolRegister.ViewModels.VM.GroupVm>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @HtmlHelperDisplayNameExtensions.DisplayNameFor(Html, model => model.Id)
            </th>
            <th>
                @HtmlHelperDisplayNameExtensions.DisplayNameFor(Html, model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "AddOrEditGroup", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteGroup", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
