@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<SubjectVm>
@{
    ViewData["Title"] = SharedLocalizer["Subjects"];
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="AddOrEditSubject">@SharedLocalizer["Create New"]</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @HtmlHelperDisplayNameExtensions.DisplayNameFor(Html, model => model.Name)
        </th>
        <th>
            @HtmlHelperDisplayNameExtensions.DisplayNameFor(Html, model => model.Description)
        </th>
        <th>
            @HtmlHelperDisplayNameExtensions.DisplayNameFor(Html, model => model.TeacherName)
        </th>
        <th>
            <label>@Localizer["Groups Count"]</label>
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Groups.Count)
            </td>
            <td>
                @Html.ActionLink(SharedLocalizer["Edit"].Value,
                    "AddOrEditSubject",
                    new {
                        id = item.Id
                    }) |
                @Html.ActionLink(SharedLocalizer["Details"].Value,
                    "Details",
                    new {
                        id = item.Id
                    }) |
                @Html.ActionLink(Localizer["Attach Subject to Group"].Value,
                    "AttachSubjectToGroup",
                    "Group",
                    new {
                        subjectId = item.Id
                    }) |
                @Html.ActionLink(Localizer["Detach Subject from Group"].Value,
                    "DetachSubjectFromGroup",
                    "Group",
                    new {
                        subjectId = item.Id
                    })
            </td>
        </tr>
    }
    </tbody>
</table>
