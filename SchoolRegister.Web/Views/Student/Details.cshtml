        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AverageGrade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Group.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Group.Name)
